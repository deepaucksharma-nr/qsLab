TOMBSTONE_SAMPLE_SIZE=1000
TOMBSTONE_TIMEOUT=30s
TOMBSTONE_WORKERS=3
HEALTH_SCORE_INTERVAL=300s

# Lab Settings
ENVIRONMENT=development
DATACENTER=local
ENABLE_DEBUG=false