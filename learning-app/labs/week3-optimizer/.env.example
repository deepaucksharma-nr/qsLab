# Week 3 Lab Environment Variables
# Copy this file to .env and update with your values

# New Relic Configuration
NEW_RELIC_LICENSE_KEY=your_license_key_here
NEW_RELIC_ACCOUNT_ID=your_account_id_here
NEW_RELIC_API_KEY=your_api_key_here
NEW_RELIC_REGION=US  # or EU

# Kafka Configuration
KAFKA_HEAP_OPTS=-Xmx1G -Xms1G
KAFKA_JVM_PERFORMANCE_OPTS=-server -XX:+UseG1GC
KAFKA_LOG_RETENTION_HOURS=24
KAFKA_AUTO_CREATE_TOPICS=true

# Performance Testing
PERF_TEST_RECORDS=1000000
PERF_TEST_RECORD_SIZE=1024
PERF_TEST_THROUGHPUT=-1  # unlimited

# Monitoring
PROMETHEUS_RETENTION=7d
GRAFANA_ADMIN_PASSWORD=admin

# Resource Limits
BROKER_MEMORY_LIMIT=1G
BROKER_CPU_LIMIT=1.0