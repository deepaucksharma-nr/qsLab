# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kafka_learning_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# Security Configuration
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:8080
TRUSTED_PROXIES=

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_NETWORK=kafka-learning-network

# New Relic Configuration (Optional)
NEW_RELIC_APP_NAME=Kafka Learning App
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_ENABLED=false

# Email Configuration (Future Use)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=
EMAIL_FROM=noreply@kafkalearning.app

# Feature Flags
FEATURE_SSO=false
FEATURE_MULTI_TENANCY=true
FEATURE_ANALYTICS=true